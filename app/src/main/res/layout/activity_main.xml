<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnVerCatalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Catálogo"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6164D5" />

    <!-- Mi Pedido con Badge -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnMiPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi Pedido"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="#5FBF9F" />

        <!-- Badge de cantidad -->
        <TextView
            android:id="@+id/tvBadgeCarrito"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/badge_background"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categorías"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E0BD83" />

    <Button
        android:id="@+id/btnContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacto / Acerca de"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#6B63F6" />

</LinearLayout>